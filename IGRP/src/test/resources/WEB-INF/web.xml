<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  
  <display-name>IGRP</display-name>
  
  <servlet>
    <servlet-name>IGRP</servlet-name>
    <servlet-class>nosi.core.servlet.IgrpServlet</servlet-class>
    <init-param>
      <param-name>git</param-name>
      <param-value>C:\Users\angelo.correia.GOVCV\git\igrp-java-arquillian-test</param-value>
    </init-param>
    <init-param>
      <param-name>authentication_type</param-name>
      <param-value>db</param-value>
    </init-param>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>IGRP</servlet-name>
    <url-pattern>/webapps</url-pattern>
  </servlet-mapping>
 
  
  <welcome-file-list>
    <welcome-file>/webapps?r=igrp/home/index</welcome-file>
  </welcome-file-list>
  
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/webapps?r=igrp/error-page/exception</location>
  </error-page>
  
  <session-config>
    <session-timeout>15</session-timeout>
  </session-config>
  
</web-app>